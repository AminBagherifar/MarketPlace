@model List<MarketPlace.DataLayer.Entities.ProductOrder.OrderDetail>
@{
    ViewData["Title"] = "OrderDetails";
}

<div class="col-xs-8">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            نام نام کالا
                        </th>
                        <th>
                            تعداد
                        </th>
                        <th>
                            قیمت 
                        </th>
                        <th>
                            قیمت کل
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderDetail in Model)
                    {
                        <tr>
                            <td>
                                @orderDetail.Product.Title
                            </td>
                            <td>
                                @orderDetail.Count
                            </td>
                            <td>
                                @orderDetail.ProductPrice.ToString("#,0")
                            </td>
                            <td>
                                @((orderDetail.ProductPrice*orderDetail.Count).ToString("#,0"))
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <p>
                    هیچ اطلاعاتی یافت نشد
                </p>
            </div>
        }
    </div>
</div>
