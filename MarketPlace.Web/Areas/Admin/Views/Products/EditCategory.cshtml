@using MarketPlace.DataLayer.Entities.Products
@model MarketPlace.DataLayer.Entities.Products.ProductCategory
@{
    ViewData["Title"] = "ثبت دست بندی";
}


@section scripts
{
    <partial name="_JqueryValidators" />
}


<div class="col-xs-6">
    <div class="well with-header">
        <div class="header bordered-sky">
            فیلتر
        </div>
        <form asp-area="Admin" asp-controller="Products" asp-action="EditCategory" method="post" id="filter-form">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label>عنوان دستبندی</label>
                <input class="form-control" asp-for="Title">
            </div>
            <div class="form-group">
                <label>تلفن تماس</label>
                <input class="form-control" asp-for="UrlName">
            </div>
            <button type="submit" class="btn btn-warning btn-block">ثبت</button>
        </form>
    </div>
</div>