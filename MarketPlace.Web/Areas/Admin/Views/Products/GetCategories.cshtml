@model List<MarketPlace.DataLayer.Entities.Products.ProductCategory>

<div class="col-xs-8">
    <div class="well with-header with-footer">
        <div class="header bordered-sky">
            @ViewData["Title"]
        </div>
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            عنوان
                        </th>
                        <th>
                            Url
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr id="ajax-url-item-@category.Id">
                            <td>
                                @category.Title
                            </td> 
                            <td>
                                @category.UrlName
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Products" asp-action="EditCategory" asp-route-categoryId="@category.Id">ویرایش</a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Products" asp-action="DeleteCategory" asp-route-categoryId="@category.Id">حدف</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <p>
                    هیچ اطلاعاتی یافت نشد
                </p>
            </div>
        }
    </div>
</div>